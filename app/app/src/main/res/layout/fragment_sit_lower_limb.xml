                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="1dp">
                <!--        肩胛轉圈-->

                <!--        肩胛下壓-->

                <LinearLayout

                    android:id="@+id/linearLayoutCalfStretch"
                    android:layout_width="180dp"
                    android:layout_height="110dp"


                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/toolbarsize"
                    app:layout_constraintBottom_toTopOf="@+id/guideline33"
                    app:layout_constraintEnd_toStartOf="@+id/guideline9"
                    app:layout_constraintTop_toTopOf="@+id/guideline32">


                    <ImageView
                        android:id="@+id/CalfStretch_sit_imageView"
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/sitting" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/CalfStretch_LLsit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/optopns_btn"
                            android:text="@string/CalfStretch"
                            android:textSize="@dimen/option_size" />

                        <TextView
                            android:id="@+id/CalfStretch_sit_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小腿拉伸簡易說明"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

