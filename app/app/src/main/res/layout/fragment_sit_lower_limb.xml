                            android:text="@string/LegRaises"
                            android:textSize="@dimen/option_size" />

                        <TextView
                            android:id="@+id/LegRaises_sit_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="抬腿簡易說明"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

