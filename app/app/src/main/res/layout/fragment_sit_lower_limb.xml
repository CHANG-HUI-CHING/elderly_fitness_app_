                        android:orientation="vertical">

                        <Button
                            android:id="@+id/Tiptoe_LLsit_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/optopns_btn"
                            android:text="@string/Tiptoe"
                            android:textSize="@dimen/option_size" />

                        <TextView
                            android:id="@+id/Tiptoe_sit_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="踮腳簡易說明"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/linearLayoutSideLegLift"
                    android:layout_width="180dp"
                    android:layout_height="110dp"


                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_background"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/toolbarsize"
                    app:layout_constraintBottom_toTopOf="@+id/guideline31"
                    app:layout_constraintEnd_toStartOf="@+id/guideline9"
                    app:layout_constraintTop_toTopOf="@+id/guideline30">


                    <ImageView
                        android:id="@+id/SideLegLift_sit_imageView"
